{
    "name": "EBGAN",
    "n_gpu": 2,
    
    "g_arch": {
        "type": "Generator",
        "args": {}
    },

    "d_arch": {
        "type": "Discriminator",
        "args": {}
    },

    "data_loader": {
        "type": "CIFAR10DataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "g_optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "d_optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "my_metric", "my_metric2"
    ],
    "g_lr_scheduler": {
        "type":"StepLR",
        "args":{
            "step_size":50,
            "gamma":0.1
        }
    },
    "d_lr_scheduler": {
        "type":"StepLR",
        "args":{
            "step_size":50,
            "gamma":0.1
        }
    },
    "trainer": {
        "epochs": 1000,
        "save_dir": "saved/",
        "save_freq": 1,
        "verbosity": 3,
        "monitor": "val_loss",
        "monitor_mode": "min"
    },
    "visualization":{
        "tensorboardX": true,
        "log_dir": "saved/runs"
    }
}
